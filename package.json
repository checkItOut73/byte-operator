{
  "name": "byte-operator",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build:browser": "webpack --config build/configs/webpack.config.js",
    "build:server": "tsc",
    "watch:server": "npm run build:server -- --watch",
    "copy:idea": "cpy build/configs/.idea .idea --no-overwrite",
    "format": "prettier --write \"{./**/*.{json,js,jsx,ts,tsx},.prettierrc}\"",
    "start": "node ./dist/server/index.js",
    "start:dev": "nodemon ./dist/server/index.js"
  },
  "_moduleAliases": {
    "@src": "dist",
    "@browser": "dist/browser",
    "@components": "dist/browser/components",
    "@server": "dist/server",
    "@framework": "dist/framework",
    "@utils": "dist/utils",
    "@configs": "build/configs"
  },
  "dependencies": {
    "fastify": "^2.15.1",
    "fastify-static": "^2.5.1",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "cpy-cli": "^3.1.0",
    "css-loader": "^3.4.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "merge-options": "^2.0.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2",
    "ws": "^7.2.0"
  }
}
